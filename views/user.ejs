<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <title>Instagram Profile</title>
    <style>
      .img-rounded {
        border-radius: 10px;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">
          <img src="https://bitlee.info/inner/images/instagram-clone-banner.png" alt="Logo" style="width: 40px;">
          InstaClone
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav mr-auto">

              <% if(isLoggedIn){ %>
                  <li class="nav-item">
                      <a class="nav-link" href="/posts/form">Add Post</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" href="/logout">Logout</a>
                  </li>
               <% } else{ %>  
                  <li class="nav-item">
                      <a class="nav-link" href="/login">Login</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" href="/register">Register</a>
                  </li>
                <% } %>
              <li class="nav-item">
                  <a class="nav-link" href="/users">Users</a>
              </li>
          
            
          </ul>
          <form action="/search" class="form-inline my-2 my-lg-0">
              <input class="form-control mr-sm-2" id="search" name="search" type="text" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Search</button>
          </form>
      </div>
  </nav>
    <div class="container-fluid mt-5 col-10">
      <div class="row">
        <div class="col-12 text-center">
          <img src="<%= user.picture %>" class="rounded-circle mb-3" style=" width: 200px;height: 200px;" alt="Profile Picture">
          <h1>@<%= user.name %> </h1>
          <p><%= user.description %> </p>
        </div>
      </div>
      <hr class="hr" />
     
        <div class="row my-3 justify-content-center">  
      <% posts.forEach(function(post) { %> 
      <div class="col-12 col-md-4 my-1">
        <a href="/posts/<%= post.ID %>">
          <img src="<%= post.image %>" class="img-fluid img-rounded" alt="Post 6">
        </a>
      </div>
    <% }); %> 
</div></div>
</div>
    <footer class="bg-light py-3">
      <div class="container">
        <p class="text-center">Copyright Â© Instagram 2021</p>
      </div>
    </footer>
  </body>
</html>